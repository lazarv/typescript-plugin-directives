{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-plugin-directives"
      }
    ]
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "**/dist"]
}
